{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "vendorName": {
      "type": "string",
      "description": "The name of the vendor/service provider"
    },
    "businessDescription": {
      "type": "string",
      "description": "Brief 1-3 word description of the vendor's business",
      "maxLength": 100
    },
    "effectiveDate": {
      "type": "string",
      "format": "date",
      "description": "Contract effective date in YYYY-MM-DD format"
    },
    "renewalDate": {
      "type": "string",
      "format": "date",
      "description": "Contract renewal date in YYYY-MM-DD format"
    },
    "endDate": {
      "type": "string",
      "format": "date",
      "description": "Contract end date in YYYY-MM-DD format"
    },
    "duration": {
      "type": "string",
      "description": "Contract duration (e.g., '2 years', '36 months')"
    },
    "terms": {
      "type": "object",
      "properties": {
        "rates": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "description": { "type": "string" },
              "rate": { "type": "number" },
              "unit": { "type": "string" },
              "effectiveDate": { "type": "string", "format": "date" }
            }
          }
        },
        "caps": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": { "type": "string", "enum": ["monthly", "quarterly", "annual", "total"] },
              "amount": { "type": "number" },
              "description": { "type": "string" }
            }
          }
        },
        "fees": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": { "type": "string", "enum": ["percent", "fixed"] },
              "description": { "type": "string" },
              "amount": { "type": "number" }
            }
          }
        },
        "escalationClauses": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "trigger": { "type": "string" },
              "percentage": { "type": "number" },
              "frequency": { "type": "string" }
            }
          }
        },
        "paymentTerms": {
          "type": "object",
          "properties": {
            "netDays": { "type": "number" },
            "discountPercentage": { "type": "number" },
            "discountDays": { "type": "number" }
          }
        },
        "billingCycle": {
          "type": "string",
          "enum": ["weekly", "biweekly", "monthly", "quarterly", "annual"]
        },
        "lateFees": {
          "type": "object",
          "properties": {
            "percentage": { "type": "number" },
            "fixedAmount": { "type": "number" },
            "gracePeriodDays": { "type": "number" }
          }
        }
      }
    },
    "clauseSpans": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "startChar": { "type": "number" },
          "endChar": { "type": "number" },
          "text": { "type": "string" }
        }
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Confidence score of the extraction"
    }
  },
  "required": ["vendorName", "effectiveDate", "terms", "confidence"],
  "additionalProperties": false
}