# Railway-optimized Dockerfile
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy source code
COPY . .

# Build the application
RUN npm run build

# Expose port (Railway will set this automatically)
EXPOSE $PORT

# Start the application
CMD ["npm", "run", "start:prod"]